<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/border"
    android:backgroundTint="#D1D0D0"
    android:orientation="vertical"
    android:padding="4dp">

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:elevation="3dp"
        android:gravity="center"
        android:layoutDirection="rtl"
        android:orientation="horizontal"
        android:padding="4dp"
        android:textDirection="rtl"
        android:weightSum="10">

        <TextView
            android:id="@+id/bus_item_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="2"
            android:fontFamily="@font/noto_kufi_arabic_semi_bold"
            android:layoutDirection="rtl"
            android:padding="4dp"
            android:text="رقم الباص"
            android:textAlignment="center"
            android:textColor="#C51162"
            android:textDirection="rtl"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/bus_item_num"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:background="@drawable/border"
            android:backgroundTint="#00B8D4"
            android:fontFamily="@font/noto_kufi_arabic_light"
            android:layoutDirection="rtl"
            android:padding="8dp"
            android:text="20"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textDirection="rtl" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/trip_item_short_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:elevation="3dp"
        android:gravity="center"
        android:layoutDirection="rtl"
        android:orientation="horizontal"
        android:padding="4dp"
        android:textDirection="rtl"
        android:weightSum="10">

        <TextView
            android:id="@+id/bus_item_color_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="2"
            android:fontFamily="@font/noto_kufi_arabic_semi_bold"
            android:layoutDirection="rtl"
            android:padding="4dp"
            android:text="لون السيارة"
            android:textAlignment="center"
            android:textColor="#C51162"
            android:textDirection="rtl"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/bus_item_color"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:background="@drawable/border"
            android:backgroundTint="#00B8D4"
            android:fontFamily="@font/noto_kufi_arabic_light"
            android:layoutDirection="rtl"
            android:padding="8dp"
            android:text="لون الباص"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textDirection="rtl" />
    </LinearLayout>
</LinearLayout>