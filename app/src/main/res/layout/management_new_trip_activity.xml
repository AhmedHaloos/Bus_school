<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#7B1EFD"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/new_car_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:srcCompat="@drawable/profile_img_1" />

        <Button
            android:id="@+id/add_new_car_pic"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="اضف صورة"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:fontFamily="@font/noto_sans_arabic_semi_bold"
            android:gravity="center"
            android:text="بيانات الرحلة"
            android:textColor="#FFFFFF"
            android:textSize="34sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ECECEC"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="32dp"
            android:layout_marginRight="8dp"
            android:hint="رقم الرحلة"
            android:layoutDirection="rtl"
            android:textDirection="rtl"
            app:boxBackgroundColor="#FFFFFF"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusBottomEnd="15dp"
            app:boxCornerRadiusBottomStart="5dp"
            app:boxCornerRadiusTopEnd="15dp"
            app:boxCornerRadiusTopStart="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title_layout"
            app:startIconDrawable="@drawable/name_icon">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTintMode="src_in"
                android:inputType="number|text"
                android:textAlignment="textEnd"
                android:textColor="#000000" />
        </com.google.android.material.textfield.TextInputLayout>

        <View
            android:id="@+id/divider6"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="32dp"
            android:layout_marginRight="8dp"
            android:background="?android:attr/listDivider" />

        <Button
            android:id="@+id/button3"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="4dp"
            android:backgroundTint="#304FFE"
            android:layoutDirection="rtl"
            android:text="اضافة نقاط التوقف"
            android:textAlignment="viewStart"
            android:textColor="#FFFFFF"
            android:textDirection="rtl"
            android:textSize="14sp"
            android:textStyle="bold"
            app:icon="@drawable/arrow_lefy_icon"
            app:iconGravity="end"
            app:iconTint="#FFFFFF" />

        <View
            android:id="@+id/divider7"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="8dp"
            android:background="?android:attr/listDivider" />

        <Button
            android:id="@+id/button4"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="4dp"
            android:backgroundTint="#304FFE"
            android:layoutDirection="rtl"
            android:text="اضافة باص الرحلة"
            android:textAlignment="viewStart"
            android:textColor="#FFFFFF"
            android:textDirection="rtl"
            android:textSize="14sp"
            android:textStyle="bold"
            app:icon="@drawable/arrow_lefy_icon"
            app:iconGravity="end"
            app:iconTint="#FFFFFF" />

        <View
            android:id="@+id/divider8"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="8dp"
            android:background="?android:attr/listDivider" />

        <Button
            android:id="@+id/button5"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="4dp"
            android:backgroundTint="#304FFE"
            android:layoutDirection="rtl"
            android:text="اضافة سائق الرحلة"
            android:textAlignment="viewStart"
            android:textColor="#FFFFFF"
            android:textDirection="rtl"
            android:textSize="14sp"
            android:textStyle="bold"
            app:icon="@drawable/arrow_lefy_icon"
            app:iconGravity="end"
            app:iconTint="#FFFFFF" />

        <View
            android:id="@+id/divider9"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="8dp"
            android:background="?android:attr/listDivider" />

        <Button
            android:id="@+id/button6"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="4dp"
            android:backgroundTint="#304FFE"
            android:layoutDirection="rtl"
            android:text="اضافة الطلبة "
            android:textAlignment="viewStart"
            android:textColor="#FFFFFF"
            android:textDirection="rtl"
            android:textSize="14sp"
            android:textStyle="bold"
            app:icon="@drawable/arrow_lefy_icon"
            app:iconGravity="end"
            app:iconTint="#FFFFFF" />

    </LinearLayout>

</LinearLayout>