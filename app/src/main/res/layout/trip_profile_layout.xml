<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_item_details_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:layoutDirection="rtl"
    android:textDirection="rtl">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layoutDirection="rtl"
        android:textDirection="rtl">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:fontFamily="@font/noto_sans_arabic_condensed_semi_bold"
            android:gravity="center"
            android:layoutDirection="rtl"
            android:padding="4dp"
            android:text="بيانات الرحلة"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textDirection="rtl"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/driver_tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/noto_sans_arabic_condensed_semi_bold"
            android:layoutDirection="rtl"
            android:padding="4dp"
            android:text="السائق"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textDirection="rtl"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.541"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <Button
            android:id="@+id/trip_profile_disp_driver_btn"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_marginTop="1dp"
            android:backgroundTint="#84879A"
            android:fontFamily="@font/noto_sans_arabic_condensed_semi_bold"
            android:layoutDirection="rtl"
            android:padding="4dp"
            android:text="عرض بيانات السائق"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textDirection="rtl"
            android:textSize="14sp"
            app:icon="@drawable/arrow_lefy_icon"
            app:iconGravity="end"
            app:iconTint="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout8" />

        <Button
            android:id="@+id/trip_profile_disp_trip_btn"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:backgroundTint="#84879A"
            android:fontFamily="@font/noto_sans_arabic_condensed_semi_bold"
            android:layoutDirection="rtl"
            android:padding="4dp"
            android:text="عرض  مسار الرحلة"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textDirection="rtl"
            android:textSize="14sp"
            app:icon="@drawable/arrow_lefy_icon"
            app:iconGravity="end"
            app:iconTint="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout9" />

        <View
            android:id="@+id/divider3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="8dp"
            android:background="?android:attr/listDivider"
            android:layoutDirection="rtl"
            android:padding="4dp"
            android:textDirection="rtl"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/trip_profile_disp_driver_btn" />

        <TextView
            android:id="@+id/car_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:fontFamily="@font/noto_sans_arabic_condensed_semi_bold"
            android:layoutDirection="rtl"
            android:padding="4dp"
            android:text="السيارة"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textDirection="rtl"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/trip_profile_disp_driver_btn" />

        <Button
            android:id="@+id/trip_profile_disp_car_btn"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:backgroundTint="#84879A"
            android:fontFamily="@font/noto_sans_arabic_condensed_semi_bold"
            android:layoutDirection="rtl"
            android:padding="4dp"
            android:text="عرض بيانات السيارة"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textDirection="rtl"
            android:textSize="14sp"
            app:icon="@drawable/arrow_lefy_icon"
            app:iconGravity="end"
            app:iconTint="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout7" />

        <View
            android:id="@+id/divider4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="8dp"
            android:background="?android:attr/listDivider"
            android:layoutDirection="rtl"
            android:padding="4dp"
            android:textDirection="rtl"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/trip_profile_disp_car_btn" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="8dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider4">

            <TextView
                android:id="@+id/textView_1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="2"
                android:fontFamily="@font/noto_kufi_arabic_semi_bold"
                android:layoutDirection="rtl"
                android:padding="4dp"
                android:text="رقم الرحلة "
                android:textAlignment="textStart"
                android:textColor="#C51162"
                android:textDirection="rtl"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/trip_profile_trip_num"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="8"
                android:fontFamily="@font/noto_kufi_arabic_light"
                android:gravity="center"
                android:layoutDirection="rtl"
                android:padding="4dp"
                android:text="1365"
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:textDirection="rtl" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
            tools:layout_editor_absoluteX="-4dp">

            <TextView
                android:id="@+id/textView711"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="2"
                android:fontFamily="@font/noto_kufi_arabic_semi_bold"
                android:layoutDirection="rtl"
                android:padding="4dp"
                android:text="حالة الرحلة "
                android:textAlignment="textStart"
                android:textColor="#C51162"
                android:textDirection="rtl"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/trip_profile_trip_state"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="8"
                android:fontFamily="@font/noto_kufi_arabic_light"
                android:gravity="center"
                android:layoutDirection="rtl"
                android:padding="4dp"
                android:text="انتهت"
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:textDirection="rtl" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:orientation="horizontal"
            android:weightSum="10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/driver_tv_1">

            <TextView
                android:id="@+id/textView_3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="2"
                android:fontFamily="@font/noto_kufi_arabic_semi_bold"
                android:layoutDirection="rtl"
                android:padding="4dp"
                android:text="اسم السائق"
                android:textAlignment="textStart"
                android:textColor="#C51162"
                android:textDirection="rtl"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/trip_profile_driver_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="8"
                android:fontFamily="@font/noto_kufi_arabic_light"
                android:gravity="center"
                android:layoutDirection="rtl"
                android:padding="4dp"
                android:text="محمد"
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:textDirection="rtl" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:orientation="horizontal"
            android:weightSum="10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout5">

            <TextView
                android:id="@+id/textView81"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="2"
                android:fontFamily="@font/noto_kufi_arabic_semi_bold"
                android:layoutDirection="rtl"
                android:padding="4dp"
                android:text="رقم الهاتف"
                android:textAlignment="textStart"
                android:textColor="#C51162"
                android:textDirection="rtl"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/trip_profile_driver_phone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="8"
                android:fontFamily="@font/noto_kufi_arabic_light"
                android:gravity="center"
                android:layoutDirection="rtl"
                android:padding="4dp"
                android:text="05511545"
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:textDirection="rtl" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/car_tv">

            <TextView
                android:id="@+id/textView_5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="2"
                android:fontFamily="@font/noto_kufi_arabic_semi_bold"
                android:layoutDirection="rtl"
                android:padding="4dp"
                android:text="رقم الباص"
                android:textAlignment="textStart"
                android:textColor="#C51162"
                android:textDirection="rtl"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/trip_profile_car_num"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="8"
                android:fontFamily="@font/noto_kufi_arabic_light"
                android:gravity="center"
                android:layoutDirection="rtl"
                android:padding="4dp"
                android:text="215"
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:textDirection="rtl" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="1dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout6">

            <TextView
                android:id="@+id/textView71"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="2"
                android:fontFamily="@font/noto_kufi_arabic_semi_bold"
                android:layoutDirection="rtl"
                android:padding="4dp"
                android:text="عدد المقاعد"
                android:textAlignment="textStart"
                android:textColor="#C51162"
                android:textDirection="rtl"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/trip_profile_car_seats"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="8"
                android:fontFamily="@font/noto_kufi_arabic_light"
                android:gravity="center"
                android:layoutDirection="rtl"
                android:padding="4dp"
                android:text="16"
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:textDirection="rtl" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
