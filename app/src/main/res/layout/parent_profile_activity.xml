<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    android:padding="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layoutDirection="rtl">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="rtl"
            android:orientation="vertical"
            android:padding="4dp"
            android:weightSum="7"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/parent_profile_name">

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:elevation="3dp"
                android:layoutDirection="rtl"
                android:orientation="horizontal"
                android:padding="4dp"
                android:textDirection="rtl"
                android:weightSum="10">

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:layout_weight="2"
                    android:fontFamily="@font/noto_kufi_arabic_semi_bold"
                    android:layoutDirection="rtl"
                    android:padding="4dp"
                    android:text="العمر "
                    android:textAlignment="center"
                    android:textColor="#C51162"
                    android:textDirection="rtl"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/parent_profile_age"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:fontFamily="@font/noto_kufi_arabic_light"
                    android:layoutDirection="rtl"
                    android:padding="8dp"
                    android:textAlignment="textStart"
                    android:textColor="#000000"
                    android:textDirection="rtl" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:elevation="3dp"
                android:layoutDirection="rtl"
                android:orientation="horizontal"
                android:padding="4dp"
                android:textDirection="rtl"
                android:weightSum="10">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:layout_weight="2"
                    android:fontFamily="@font/noto_kufi_arabic_semi_bold"
                    android:layoutDirection="rtl"
                    android:padding="4dp"
                    android:text="الايميل"
                    android:textAlignment="center"
                    android:textColor="#C51162"
                    android:textDirection="rtl"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/parent_profile_email"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:fontFamily="@font/noto_kufi_arabic_light"
                    android:layoutDirection="rtl"
                    android:padding="8dp"
                    android:textAlignment="textStart"
                    android:textColor="#000000"
                    android:textDirection="rtl" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:elevation="3dp"
                android:layoutDirection="rtl"
                android:orientation="horizontal"
                android:padding="4dp"
                android:textDirection="rtl"
                android:weightSum="10">

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:layout_weight="2"
                    android:fontFamily="@font/noto_kufi_arabic_semi_bold"
                    android:layoutDirection="rtl"
                    android:padding="4dp"
                    android:text="الهاتف"
                    android:textAlignment="center"
                    android:textColor="#C51162"
                    android:textDirection="rtl"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/parent_profile_phone"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:fontFamily="@font/noto_kufi_arabic_light"
                    android:layoutDirection="rtl"
                    android:padding="8dp"
                    android:textAlignment="textStart"
                    android:textColor="#000000"
                    android:textDirection="rtl" />

                <ImageButton
                    android:id="@+id/parent_profile_call_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="4dp"
                    android:layout_weight="2"
                    android:background="@null"
                    android:layoutDirection="rtl"
                    android:padding="4dp"
                    app:srcCompat="@drawable/phone_icon" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:elevation="3dp"
                android:layoutDirection="rtl"
                android:orientation="horizontal"
                android:padding="4dp"
                android:textDirection="rtl"
                android:weightSum="10">

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:layout_weight="2"
                    android:fontFamily="@font/noto_kufi_arabic_semi_bold"
                    android:layoutDirection="rtl"
                    android:padding="4dp"
                    android:text="العنوان"
                    android:textAlignment="center"
                    android:textColor="#C51162"
                    android:textDirection="rtl"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/parent_profile_address"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:fontFamily="@font/noto_kufi_arabic_light"
                    android:layoutDirection="rtl"
                    android:padding="8dp"
                    android:textAlignment="textStart"
                    android:textColor="#000000"
                    android:textDirection="rtl" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:elevation="3dp"
                android:layoutDirection="rtl"
                android:orientation="horizontal"
                android:padding="4dp"
                android:textDirection="rtl"
                android:weightSum="10">

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:layout_weight="2"
                    android:fontFamily="@font/noto_kufi_arabic_semi_bold"
                    android:layoutDirection="rtl"
                    android:padding="4dp"
                    android:text="الوظيفة"
                    android:textAlignment="center"
                    android:textColor="#C51162"
                    android:textDirection="rtl"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/parent_profile_job"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:fontFamily="@font/noto_kufi_arabic_light"
                    android:layoutDirection="rtl"
                    android:padding="8dp"
                    android:textAlignment="textStart"
                    android:textColor="#000000"
                    android:textDirection="rtl" />

            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:elevation="3dp"
                android:layoutDirection="rtl"
                android:orientation="horizontal"
                android:padding="4dp"
                android:textDirection="rtl"
                android:weightSum="10"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:fontFamily="@font/noto_kufi_arabic_semi_bold"
                    android:layoutDirection="rtl"
                    android:padding="4dp"
                    android:text="اسم المستخدم "
                    android:textAlignment="textStart"
                    android:textColor="#C51162"
                    android:textDirection="rtl"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/parent_profile_username"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="10"
                    android:fontFamily="@font/noto_kufi_arabic_light"
                    android:layoutDirection="rtl"
                    android:padding="8dp"
                    android:textAlignment="textStart"
                    android:textColor="#000000"
                    android:textDirection="rtl" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/driver_username_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:elevation="3dp"
                android:layoutDirection="rtl"
                android:orientation="horizontal"
                android:padding="4dp"
                android:textDirection="rtl"
                android:weightSum="10">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:fontFamily="@font/noto_kufi_arabic_semi_bold"
                    android:layoutDirection="rtl"
                    android:padding="4dp"
                    android:text="كلمة السر"
                    android:textAlignment="textStart"
                    android:textColor="#C51162"
                    android:textDirection="rtl"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/parent_profile_password"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="10"
                    android:fontFamily="@font/noto_kufi_arabic_light"
                    android:layoutDirection="rtl"
                    android:padding="8dp"
                    android:textAlignment="textStart"
                    android:textColor="#000000"
                    android:textDirection="rtl" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/parent_profile_pic"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="64dp"
            android:layout_marginBottom="32dp"
            android:elevation="3dp"
            android:layoutDirection="rtl"
            app:layout_constraintBottom_toTopOf="@+id/parent_profile_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/profile_icon" />

        <TextView
            android:id="@+id/parent_profile_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/noto_kufi_arabic_semi_bold"
            android:layoutDirection="rtl"
            android:text="اسم ولى الامر"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/parent_profile_pic" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>