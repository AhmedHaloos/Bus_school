<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDEDED"
    android:padding="4dp">

    <LinearLayout
        android:id="@+id/linearLayout10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:weightSum="5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/car_profile_num">

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="4"
            android:elevation="3dp"
            android:gravity="center"
            android:layoutDirection="rtl"
            android:orientation="horizontal"
            android:padding="4dp"
            android:textDirection="rtl"
            android:weightSum="5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

            <TextView
                android:id="@+id/textView14"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="2"
                android:fontFamily="@font/noto_kufi_arabic_semi_bold"
                android:layoutDirection="rtl"
                android:padding="4dp"
                android:text="نوع السيارة "
                android:textAlignment="center"
                android:textColor="#C51162"
                android:textDirection="rtl"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/car_profile_kind"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@drawable/border"
                android:backgroundTint="#00B8D4"
                android:fontFamily="@font/noto_kufi_arabic_light"
                android:layoutDirection="rtl"
                android:padding="8dp"
                android:text="نوع السيارة "
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textDirection="rtl"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="4"
            android:elevation="3dp"
            android:gravity="center"
            android:layoutDirection="rtl"
            android:orientation="horizontal"
            android:padding="4dp"
            android:textDirection="rtl"
            android:weightSum="5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/driver_name">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="2"
                android:fontFamily="@font/noto_kufi_arabic_semi_bold"
                android:layoutDirection="rtl"
                android:padding="4dp"
                android:text="موديل السيارة "
                android:textAlignment="center"
                android:textColor="#C51162"
                android:textDirection="rtl"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/car_profile_model"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@drawable/border"
                android:backgroundTint="#00B8D4"
                android:fontFamily="@font/noto_kufi_arabic_light"
                android:layoutDirection="rtl"
                android:padding="8dp"
                android:text="موديل السيارة "
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textDirection="rtl"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="8dp"
            android:layout_weight="4"
            android:elevation="3dp"
            android:gravity="center"
            android:layoutDirection="rtl"
            android:orientation="horizontal"
            android:padding="4dp"
            android:textDirection="rtl"
            android:weightSum="5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout">

            <TextView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="2"
                android:fontFamily="@font/noto_kufi_arabic_semi_bold"
                android:layoutDirection="rtl"
                android:padding="4dp"
                android:text="لون السيارة "
                android:textAlignment="center"
                android:textColor="#C51162"
                android:textDirection="rtl"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/car_profile_color"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@drawable/border"
                android:backgroundTint="#00B8D4"
                android:fontFamily="@font/noto_kufi_arabic_light"
                android:layoutDirection="rtl"
                android:padding="8dp"
                android:text="لون السيارة"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textDirection="rtl"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="8dp"
            android:layout_weight="4"
            android:elevation="3dp"
            android:gravity="center"
            android:layoutDirection="rtl"
            android:orientation="horizontal"
            android:padding="4dp"
            android:textDirection="rtl"
            android:weightSum="5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout">

            <TextView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="2"
                android:fontFamily="@font/noto_kufi_arabic_semi_bold"
                android:layoutDirection="rtl"
                android:padding="4dp"
                android:text="عدد مقاعد السيارة "
                android:textAlignment="textStart"
                android:textColor="#C51162"
                android:textDirection="rtl"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/car_profile_seats"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@drawable/border"
                android:backgroundTint="#00B8D4"
                android:fontFamily="@font/noto_kufi_arabic_light"
                android:layoutDirection="rtl"
                android:padding="8dp"
                android:text="50"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textDirection="rtl"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/car_profile_pic"
        android:layout_width="150dp"
        android:layout_height="150dp"

        android:layout_marginTop="50dp"
        android:layout_marginBottom="24dp"
        android:elevation="3dp"
        app:layout_constraintBottom_toTopOf="@+id/car_profile_num"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bus_image" />

    <TextView
        android:id="@+id/car_profile_num"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/noto_kufi_arabic_semi_bold"
        android:text="رقم السيارة "
        android:textAlignment="center"
        android:textColor="#AA00FF"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/car_profile_pic" />

</androidx.constraintlayout.widget.ConstraintLayout>